{
  "name": "web-everything",
  "version": "1.0.0",
  "description": "Web Everything - Grouping standards for better web library standardization",
  "scripts": {
    "start": "eleventy --serve --watch",
    "build": "eleventy",
    "clean": "rm -rf _site",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:integration": "playwright test",
    "test:coverage": "vitest run --coverage",
    "build:plugs": "tsc -p tsconfig.plugs.json"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.0.0",
    "happy-dom": "^12.10.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "web-standards",
    "web-components",
    "polylfill",
    "dependency-injection"
  ],
  "author": "Web Everything Project",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.9.3"
  }
}
