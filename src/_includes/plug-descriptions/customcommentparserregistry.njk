<h3 id="overview">Overview</h3>
<p>Parses comment content to identify and upgrade custom comments into active directives.</p>

<h3 id="interface">Interface</h3>
{% highlight "typescript" %}
interface CustomCommentParserRegistry extends CustomRegistry<CustomCommentParser> {
    readonly localName = 'customCommentParsers';
    define(
        name: string,
        parser: CustomCommentParser
    ): void;
}
{% endhighlight %}

<h3 id="usage-example">Usage Example</h3>

{{ pluggedContent("comment-parser-example", code=true) }}
{% highlight "javascript" %}
// Access the global registry
const registry = window.customCommentParsers;

// Define a parser for directive syntax
customCommentParsers.define('directive', {
    parse(comment) {
        // Parse comment text and return directive info
        return { name: 'if', args: ['condition'] };
    }
});
{% endhighlight %}

{{ unpluggedContent("comment-parser-example", code=true) }}
{% highlight "javascript" %}
consume { customCommentParsers } of '@web-directives';

// Access the consumed registry
const registry = customCommentParsers;

// Define a parser for directive syntax
customCommentParsers.define('directive', {
    parse(comment) {
        // Parse comment text and return directive info
        return { name: 'if', args: ['condition'] };
    }
});
{% endhighlight %}

