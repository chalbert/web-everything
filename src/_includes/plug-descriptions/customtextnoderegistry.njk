<h3 id="overview">Overview</h3>
<p>Allows defining parsers for text content, enabling custom template syntax like Mustache-style interpolation.</p>

<h3 id="interface">Interface</h3>
{% highlight "typescript" %}
interface CustomTextNodeRegistry extends HTMLRegistry<
    TextNodeDefinition,
    ImplementedTextNode
> {
    readonly localName = 'customTextNodes';
    define(name: string, TextNode: ImplementedTextNode): void;
}
{% endhighlight %}

<h3 id="usage-example">Usage Example</h3>

{{ pluggedContent("textnode-reg-example", code=true) }}
{% highlight "javascript" %}
// Access the global registry
const registry = window.customTextNodes;

// Define a text node type
customTextNodes.define('mustache', MustacheTextNode);

// Check if a type is defined
if (customTextNodes.get('mustache')) {
    console.log('Mustache syntax is registered');
}
{% endhighlight %}

{{ unpluggedContent("textnode-reg-example", code=true) }}
{% highlight "javascript" %}
consume { customTextNodes } of '@web-expressions';

// Access the consumed registry
const registry = customTextNodes;

// Define a text node type
customTextNodes.define('mustache', MustacheTextNode);

// Check if a type is defined
if (customTextNodes.get('mustache')) {
    console.log('Mustache syntax is registered');
}
{% endhighlight %}

