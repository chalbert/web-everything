<h3 id="overview">Overview</h3>
<p>
    The root container for dependency injection. It handles the map of all active injectors in the DOM tree.
</p>

<h3 id="interface">Interface</h3>
{% highlight "typescript" %}
class InjectorRoot {
    // Retrieval Methods used by resolution algorithm
    static getInjectorRootOf(node: Node): InjectorRoot | undefined;
    static getProviderOf(node: Node, providerName: string): Provider | undefined;
    static getProvidersOf(node: Node): Map<string, Provider>;
}
{% endhighlight %}

<h3 id="usage-example">Usage Example</h3>

{{ pluggedContent("injector-root-example", code=true) }}
{% highlight "javascript" %}
// Get the injector root for a node
const root = InjectorRoot.getInjectorRootOf(element);

// Get a specific provider
const provider = InjectorRoot.getProviderOf(element, 'theme');

// Get all providers for a node
const providers = InjectorRoot.getProvidersOf(element);
{% endhighlight %}

{{ unpluggedContent("injector-root-example", code=true) }}
