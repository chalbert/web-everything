<h3 id="overview">Overview</h3>
<p>Manages parsers that can interpret text node content and transform it into reactive components.</p>

<h3 id="interface">Interface</h3>
{% highlight "typescript" %}
interface CustomTextNodeParserRegistry extends CustomRegistry<CustomTextNodeParser> {
    readonly localName = 'customTextNodeParsers';
    define(
        name: string,
        parser: CustomTextNodeParser
    ): void;
}
{% endhighlight %}

<h3 id="usage-example">Usage Example</h3>

{{ pluggedContent("textnode-parser-example", code=true) }}
{% highlight "javascript" %}
// Access the global registry
const registry = window.customTextNodeParsers;

// Define a parser for mustache syntax
customTextNodeParsers.define('mustache', {
    parse(text) {
        // Detect mustache patterns
        const match = text.match(/\{\{(.+?)\}\}/);
        return match ? { expression: match[1] } : null;
    }
});
{% endhighlight %}

