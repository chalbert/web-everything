<h3 id="overview">Overview</h3>
<p>Enables attaching behavior to comment nodes, useful for structural directives like virtual elements.</p>

<h3 id="interface">Interface</h3>
{% highlight "typescript" %}
interface CustomCommentRegistry extends HTMLRegistry<
    CommentDefinition,
    ImplementedComment
> {
    readonly localName = 'customComments';
    define(name: string, comment: ImplementedComment): void;
}
{% endhighlight %}

<h3 id="usage-example">Usage Example</h3>

{{ pluggedContent("comment-reg-example", code=true) }}
{% highlight "javascript" %}
// Access the global registry
const registry = window.customComments;

// Define a structural directive
customComments.define('for', ForDirective);

// Check if a directive is defined
if (customComments.get('for')) {
    console.log('For directive is registered');
}
{% endhighlight %}

{{ unpluggedContent("comment-reg-example", code=true) }}
{% highlight "javascript" %}
consume { customComments } of '@web-directives';

// Access the consumed registry
const registry = customComments;

// Define a structural directive
customComments.define('for', ForDirective);

// Check if a directive is defined
if (customComments.get('for')) {
    console.log('For directive is registered');
}
{% endhighlight %}

