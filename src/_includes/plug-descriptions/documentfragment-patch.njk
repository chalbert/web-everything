{% from "mode-selector.njk" import pluggedContent, unpluggedContent, comparisonContent, endContent %}

<h3 id="overview">Overview</h3>
<p>
    Adds <code>ownerTemplate</code> property to DocumentFragment for template ownership tracking.
</p>

<h3 id="behavior">Behavior</h3>
<p class="text-sm text-gray-600 mb-4">
    DocumentFragments created from template elements maintain a reference to their owner template, enabling proper lifecycle management and template instantiation tracking.
</p>

<h3 id="usage-example">Usage Example</h3>

{{ pluggedContent("fragment-example", code=true) }}
{% highlight "javascript" %}
const template = document.createElement('template');
template.innerHTML = '<my-component></my-component>';

// Access the enhanced fragment
const fragment = template.content;

// Track template ownership
console.log(fragment.ownerTemplate === template); // true
{% endhighlight %}

{{ unpluggedContent("fragment-example", code=true) }}
{% highlight "javascript" %}
consume { getOwnerTemplate } of '@web-components';

const template = document.createElement('template');
template.innerHTML = '<my-component></my-component>';

// Access the fragment
const fragment = template.content;

// Track template ownership via function
console.log(getOwnerTemplate(fragment) === template); // true
{% endhighlight %}

