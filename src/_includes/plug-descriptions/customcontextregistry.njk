{% from "mode-selector.njk" import pluggedContent, unpluggedContent, comparisonContent, endContent %}

<h3 id="overview">Overview</h3>
<p>
    Exposes <code>window.customContextTypes</code> for registering context definitions that provide hierarchical data flow to children.
</p>

<h3 id="interface">Interface</h3>
{% highlight "typescript" %}
interface CustomContextRegistry extends HTMLRegistry<
    ContextDefinition,
    ImplementedContext
> {
    readonly localName = 'customContextTypes';

    define(name: string, Context: ImplementedContext): void;
}
{% endhighlight %}

<h3 id="usage-example">Usage Example</h3>

{{ pluggedContent("registry-example", code=true) }}
{% highlight "javascript" %}
// Access the global registry
const registry = window.customContextTypes;

// Define a context type
customContextTypes.define('user', UserContext);

// Check if a context is defined
if (customContextTypes.get('user')) {
    console.log('User context is registered');
}
{% endhighlight %}

{{ unpluggedContent("registry-example", code=true) }}
{% highlight "javascript" %}
consume { customContextTypes } of '@web-contexts';

// Access the consumed registry
const registry = customContextTypes;

// Define a context type
customContextTypes.define('user', UserContext);

// Check if a context is defined
if (customContextTypes.get('user')) {
    console.log('User context is registered');
}
{% endhighlight %}

