<h3 id="overview">Overview</h3>
<p>
    Exposes <code>window.customAttributes</code>. It monitors the DOM for attribute changes and facilitates the "Upgrade" of standard attributes into enhanced behaviors.
</p>

<h3 id="interface">Interface</h3>
{% highlight "typescript" %}
interface CustomAttributesRegistry extends HTMLRegistry<
    AttributeDefinition,
    ImplementedAttribute
> {
    readonly localName = 'customAttributes';

    define(
        name: string,
        constructor: ImplementedAttribute,
        options?: CustomAttributesOptions
    ): void;
}
{% endhighlight %}

<h3 id="usage-example">Usage Example</h3>

{{ pluggedContent("attr-registry-example", code=true) }}
{% highlight "javascript" %}
// Access the global registry
const registry = window.customAttributes;

// Define a behavior
customAttributes.define('draggable', DraggableBehavior);

// Check if a behavior is defined
if (customAttributes.get('draggable')) {
    console.log('Draggable behavior is registered');
}
{% endhighlight %}

{{ unpluggedContent("attr-registry-example", code=true) }}
{% highlight "javascript" %}
consume { customAttributes } of '@web-behaviors';

// Access the consumed registry
const registry = customAttributes;

// Define a behavior
customAttributes.define('draggable', DraggableBehavior);

// Check if a behavior is defined
if (customAttributes.get('draggable')) {
    console.log('Draggable behavior is registered');
}
{% endhighlight %}

