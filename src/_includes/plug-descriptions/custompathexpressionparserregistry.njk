<h3 id="overview">Overview</h3>
<p>Registry for path expression parsers, standardizing how strings are parsed into executable paths.</p>

<h3 id="interface">Interface</h3>
{% highlight "typescript" %}
interface CustomPathExpressionParserRegistry extends CustomRegistry<
    CustomPathExpressionParser
> {
    readonly localName = 'customPathExpressionParsers';
    define(
        name: string,
        parser: CustomPathExpressionParser
    ): void;

    // Returns a Consumable that provides the resolved parser
    query(): Consumable<CustomPathExpressionParser>;
}
{% endhighlight %}

<h3 id="usage-example">Usage Example</h3>

{{ pluggedContent("path-parser-reg-example", code=true) }}
{% highlight "javascript" %}
// Access the global registry
const registry = window.customPathExpressionParsers;

// Define a path parser
customPathExpressionParsers.define('keypath', keypathParser);

// Query for the active parser
const parser = customPathExpressionParsers.query();
{% endhighlight %}

{{ unpluggedContent("path-parser-reg-example", code=true) }}
{% highlight "javascript" %}
consume { customPathExpressionParsers } of '@web-expressions';

// Access the consumed registry
const registry = customPathExpressionParsers;

// Define a path parser
customPathExpressionParsers.define('keypath', keypathParser);

// Query for the active parser
const parser = customPathExpressionParsers.query();
{% endhighlight %}

