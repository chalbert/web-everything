{# Mode selector macros for plugged/unplugged documentation #}

{% macro pluggedContent(id, code=false) %}
<div class="mode-selector-container" data-mode-selector="{{ id }}" style="border: 1px solid #e5e7eb; border-radius: 0.375rem; overflow: hidden; margin-bottom: 1rem;">
    <div style="display: flex; justify-content: flex-end; padding: 0.5rem 0.75rem; background: #f9fafb; border-bottom: 1px solid #e5e7eb;">
        <div class="mode-tabs" style="display: flex; gap: 0; border: 1px solid #d1d5db; border-radius: 0.25rem; overflow: hidden;">
            <button class="mode-tab active" data-mode="plugged" style="padding: 0.25rem 0.75rem; font-size: 0.75rem; font-weight: 500; background: #059669; color: white; border: none; cursor: pointer;">
                Plugged
            </button>
            <button class="mode-tab" data-mode="unplugged" style="padding: 0.25rem 0.75rem; font-size: 0.75rem; font-weight: 500; background: white; color: #6b7280; border: none; border-left: 1px solid #d1d5db; cursor: pointer;">
                Unplugged
            </button>
            <button class="mode-tab" data-mode="comparison" style="padding: 0.25rem 0.75rem; font-size: 0.75rem; font-weight: 500; background: white; color: #6b7280; border: none; border-left: 1px solid #d1d5db; cursor: pointer;">
                Compare
            </button>
        </div>
    </div>
    <div class="mode-content" data-mode-content="{{ id }}" data-mode="plugged" style="display: block; {% if not code %}padding: 1rem;{% endif %}">
{% endmacro %}

{% macro unpluggedContent(id, code=false) %}
    </div>
    <div class="mode-content" data-mode-content="{{ id }}" data-mode="unplugged" style="display: none; {% if not code %}padding: 1rem;{% endif %}">
{% endmacro %}

{% macro comparisonContent(id, code=false) %}
    </div>
    <div class="mode-content" data-mode-content="{{ id }}" data-mode="comparison" style="display: none; {% if not code %}padding: 1rem;{% endif %}">
{% endmacro %}

{% macro endContent() %}
    </div>
</div>
{% endmacro %}
