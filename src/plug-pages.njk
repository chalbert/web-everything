---
pagination:
    data: plugs
    size: 1
    alias: plug
permalink: "plugs/{{ plug.id }}/"
layout: base.njk
eleventyComputed:
    title: "Web Plugs - {{ plug.name }}"
---

{% from "project-status.njk" import projectStatus %}

<div class="plug-detail-header">
    <div class="plug-detail-header-inner">
        <nav class="plug-breadcrumb">
            <a href="/projects/webplugs/" class="plug-crumb">Web Plugs</a>
            {% if plug.projects.length > 0 %}
            <svg class="plug-crumb-chevron" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
            <a href="/projects/webplugs/#{{ plug.projects[0] }}" class="plug-crumb">{{ plug.projects[0] | replace("web", "Web ") | title }} Plugs</a>
            {% endif %}
            <svg class="plug-crumb-chevron" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
            <span class="plug-crumb plug-crumb-current">{{ plug.name }}</span>
        </nav>
        <div class="plug-title-row">
            <h1 class="plug-title">
                {{ plug.name }}<sup class="plug-type-sup {% if plug.type == 'Global' %}plug-type-global{% else %}plug-type-patch{% endif %}">{{ plug.type }}</sup>
            </h1>
            <div class="plug-status">
                {{ projectStatus(plug.status) }}
            </div>
        </div>
    </div>
</div>

<div class="container block-detail-page">
    <div class="block-body content">
        <div class="section-card">
            {% include "plug-descriptions/" + plug.id + ".njk" %}
        </div>
    </div>
</div>
